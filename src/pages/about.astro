---
// src/pages/about.astro
import Layout from '../layouts/Layout.astro';
import { Icon } from 'astro-icon/components';
import { Image } from 'astro:assets';
import experts from '../../src/assets/images/experts.png';
import bridge from '../../src/assets/images/bridge.png';
// Importa una imagen conceptual para la sección "Story" si la tienes.
// import storyImage from '../assets/images/about-story-concept.png'; // Ejemplo
// Importa una imagen para la sección "Team" si la tienes
// import teamImage from '../assets/images/about-team-concept.png'; // Ejemplo

const coreValues = [
  { iconName: "mdi:handshake-outline", title: "Honesty & Transparency", text: "Clear communication and ethical practices are the foundation of every partnership." },
  { iconName: "mdi:target-arrow", title: "Commitment to Results", text: "We focus on delivering tangible outcomes and a rapid return on your investment." },
  { iconName: "mdi:lightbulb-on-outline", title: "Practical Innovation", text: "Leveraging cutting-edge AI that makes real-world sense for your business needs." },
  { iconName: "mdi:account-heart-outline", title: "Client-Centric Focus", text: "Your success is our success. We tailor solutions specifically for your goals." }
];

// Texto del cliente ejemplo para reutilizar
const clientExample = "Imagine ditching 8 hours of monthly invoice entry for a simple photo upload via Telegram – that's a real impact we delivered, freeing up entrepreneurs instantly.";
const missionText = "To demystify AI and deliver practical, high-impact automation and intelligence solutions that provide rapid ROI and tangible benefits for small and medium-sized businesses.";
const visionText = "To be the leading, trusted partner empowering SMBs to not just survive, but thrive in the age of AI, ensuring technology serves their growth and levels the playing field.";
---

<Layout title="About AutomationAI | Making AI Accessible & Practical">
  {/* --- Sección Hero Reimaginada --- */}
  <section class="about-hero-v2 section-padding text-center">
    <div class="container narrow-container">
      <span class="hero-eyebrow">Our Story & Purpose</span>
      <h1>We're Not Just AI Experts,<br/> We're Your <span class="highlight">AI Growth Partners</span>.</h1>
      <p class="page-subtitle large-subtitle">
        Tired of manual processes draining your time? Feeling the pressure of the AI revolution?
        We founded AutomationAI Solutions to make intelligent automation a powerful, accessible tool for businesses like yours.
      </p>
    </div>
  </section>

  {/* --- Nuestra Historia - Layout Más Dinámico --- */}
  <section class="our-story-v2 section-padding">
    <div class="container">
       <h2 class="section-title-alt">The Spark: <span class="highlight">Bridging the AI Divide</span> for SMBs</h2>
       <div class="story-layout-v2">
          {/* Columna 1: Texto */}
          <div class="story-text">
              <p>It started during an AI master's program in Spain. We saw the incredible potential, but also a frustrating reality: powerful AI tools were often out of reach for the small and medium-sized businesses that could benefit most.</p>
              <blockquote class="impact-quote">
                  "{clientExample}"
                  <cite>- Real Client Impact</cite>
              </blockquote>
              <p>Witnessing these tangible "quick wins" became our driving force. We believe practical AI can revolutionize how SMBs operate, and we're here to make that happen.</p>
              <p class="mission-link"><strong>Our Mission:</strong> To demystify AI and deliver high-impact solutions with rapid ROI. <a href="#mission-vision">Learn more below</a>.</p>
          </div>
           {/* Columna 2: Imagen Conceptual */}
          <div class="story-image">
                {<Image src={bridge} alt="Connecting SMBs to AI" class="team-img-element" widths={[400, 800]} sizes="(max-width: 768px) 90vw, 45vw" format="webp"/>}
              </div>
          </div>
       </div>
    </div>
  </section>


    {/* ====================================================================== */}
  {/* --- SECCIÓN FOUNDATION - LAYOUT B ASIMÉTRICO --- */}
  {/* ====================================================================== */}
  <section id="foundation" class="foundation-section section-padding bg-gradient">
    <div class="container">
        <h2 class="section-title-alt text-center">Our Foundation</h2>

        {/* Contenedor Principal del Layout B */}
        <div class="foundation-grid-layout-B">

            {/* Columna 1 (o 2): Stack de Misión y Visión */}
            <div class="mission-vision-stack">
                {/* Tarjeta Misión */}
                <div class="foundation-item mission-item card-hover-effect">
                     <div class="foundation-icon">
                         {/* Placeholder: Reemplazar con Icono Personalizado */}
                         <Icon name="mdi:bullseye-arrow" size={38}/>
                     </div>
                     <h3 class="foundation-title">Our Mission</h3>
                     <p class="foundation-text">{missionText}</p>
                </div>

                {/* Tarjeta Visión */}
                <div class="foundation-item vision-item card-hover-effect">
                    <div class="foundation-icon">
                        {/* Placeholder: Reemplazar con Icono Personalizado */}
                        <Icon name="mdi:binoculars" size={38}/>
                    </div>
                    <h3 class="foundation-title">Our Vision</h3>
                    <p class="foundation-text">{visionText}</p>
                </div>
            </div> {/* Fin .mission-vision-stack */}

            {/* Columna 2 (o 1): Tarjeta Dominante de Valores */}
            <div class="foundation-item values-item-dominant card-hover-effect">
                 <div class="foundation-icon">
                     {/* Placeholder: Reemplazar con Icono Personalizado */}
                     <Icon name="mdi:cards-heart-outline" size={38}/>
                 </div>
                 <h3 class="foundation-title">Our Core Values</h3>
                 {/* Sub-grid o lista para los valores */}
                 <div class="values-subgrid">
                     {coreValues.map(value => (
                        <div class="value-subitem">
                            {/* Placeholder: Reemplazar con Icono Personalizado Interno */}
                            <Icon name={value.iconName} size={28} class="value-subicon"/>
                            <div class="value-subtext">
                                <strong>{value.title}</strong>
                                <p>{value.text}</p>
                            </div>
                        </div>
                     ))}
                 </div>
            </div> {/* Fin .values-item-dominant */}

        </div> {/* Fin .foundation-grid-layout-B */}
    </div> {/* Fin .container */}
  </section>
  {/* ====================================================================== */}
  {/* --- FIN SECCIÓN FOUNDATION --- */}
  {/* ====================================================================== */}

  {/* --- Nuestro Equipo - Más Visual --- */}
  <section class="our-team-v2 section-padding bg-light-gray">
     <div class="container team-layout">
         <div class="team-image">
             {<Image src={experts} alt="AutomationAI team concept" class="team-img-element" widths={[400, 800]} sizes="(max-width: 768px) 90vw, 45vw" format="webp"/>}
         </div>
        <div class="team-text">
            <h2 class="section-title-alt">Experience Meets <span class="highlight">AI Expertise</span></h2>
            <p>We're more than just AI graduates; we're seasoned problem-solvers. Our diverse team blends advanced AI knowledge from our master's program with <strong>20+ years</strong> of real-world software industry experience.</p>
            <p>This unique mix means we understand both the technology and your business challenges, allowing us to build practical, effective solutions. <strong>We speak tech and business fluently.</strong></p>
            {/* Futuro: Botón a página de equipo detallada */}
            {/* <a href="/team" class="cta-button-secondary">Meet the Team (Coming Soon)</a> */}
        </div>
     </div>
  </section>

  {/* --- CTA Final (Reutiliza componente o estilo similar) --- */}
  <section class="final-cta-about section-padding bg-gradient"> {/* Fondo Gradiente */}
     <div class="container text-center narrow-container">
        <h2>Ready to See How AI Can <span class="highlight">Specifically Help You?</span></h2>
        <p>No obligations, just possibilities. Let's explore how AI can make a real difference in your business.</p>
        <div class="cta-buttons">
          <a href="/approach" class="cta-button-secondary">Learn Our Approach</a>
          <a href="/contact" class="cta-button-primary">Get Your Free Consultation</a>
        </div>
     </div>
  </section>

</Layout>

{/* ... Todo tu código .astro hasta antes del <style> ... */}

<style>
    /* ====================================================================== */
    /* --- ESTILOS GLOBALES Y DE UTILIDAD --- */
    /* ====================================================================== */
    :global(body) { /* Asegúrate que tus variables estén definidas globalmente o aquí */
       --primary-color: #007bff; /* Ejemplo, usa tu color exacto */
       --text-dark: #1A2B48;
       --text-medium: #4A5568;
       --text-light: #5a687f;
       --bg-light-gray: #f8f9fa;
       --border-color-soft: #e2e8f0;
    }
    :global(.section-padding) { padding-top: 5rem; padding-bottom: 5rem; }
    :global(.container) { max-width: 1100px; margin: 0 auto; padding: 0 1.5rem; }
    :global(.narrow-container) { max-width: 800px; }
    :global(.text-center) { text-align: center; }
    :global(.bg-light-gray) { background-color: var(--bg-light-gray); }
    :global(.bg-white) { background-color: #fff; }
    :global(.highlight) { color: var(--primary-color); font-weight: 600; }
    :global(.bg-gradient) { /* Gradiente base - AJUSTA A TU GUSTO */
        background: linear-gradient(135deg, rgba(235, 245, 255, 0.6) 0%, rgba(245, 250, 255, 0.9) 100%);
        /* Ejemplo alternativo oscuro (si lo prefieres, ajusta colores de texto) */
        /* background: linear-gradient(135deg, #0f172a 0%, #1e293b 100%); */
    }

    /* --- Tipografía Base --- */
    h1 { font-size: clamp(2.5rem, 6vw, 3.8rem); margin-bottom: 1rem; line-height: 1.2; color: #222; } /* Ajusta color si usas fondo oscuro */
    h2 { font-size: clamp(2rem, 5vw, 2.8rem); margin-bottom: 1.5rem; color: #333; line-height: 1.3; } /* Ajusta color si usas fondo oscuro */
    h3 { font-size: 1.25rem; margin-bottom: 0.75rem; font-weight: 600; color: #222; } /* Ajusta color si usas fondo oscuro */
    .page-subtitle { font-size: 1.15rem; color: #555; max-width: 800px; margin: 0 auto; line-height: 1.7; } /* Ajusta color si usas fondo oscuro */
    .large-subtitle { font-size: 1.3rem; max-width: 750px; margin-top: 1.5rem; }
    /* Estilo común para títulos de sección */
    .section-title-alt {
        font-size: clamp(2rem, 5vw, 2.8rem);
        margin-bottom: 4rem; /* Aumentado para más espacio */
        color: var(--text-dark); /* Usando variable */
        line-height: 1.3;
        text-align: center;
        font-weight: 700;
        position: relative;
    }
    /* Línea decorativa opcional bajo títulos de sección */
    .section-title-alt::after {
        content: '';
        display: block;
        width: 60px;
        height: 3px;
        background-color: var(--primary-color);
        margin: 0.75rem auto 0;
        border-radius: 2px;
    }

    /* ====================================================================== */
    /* --- ESTILOS SECCIÓN HERO --- */
    /* ====================================================================== */
    .about-hero-v2 { background-color: var(--bg-white); } /* Usando variable */
    .hero-eyebrow {
        display: block;
        font-size: 0.9rem;
        font-weight: 600;
        color: var(--primary-color);
        text-transform: uppercase;
        letter-spacing: 1px;
        margin-bottom: 0.5rem;
    }
    .about-hero-v2 h1 { color: #222; } /* Específico para Hero sobre blanco */

    /* ====================================================================== */
    /* --- ESTILOS SECCIÓN OUR STORY --- */
    /* ====================================================================== */
    .our-story-v2 .section-title-alt { margin-bottom: 3rem; } /* Ajuste específico si es necesario */
    .story-layout-v2 {
        display: grid;
        grid-template-columns: 1fr;
        gap: 3rem;
        align-items: center;
    }
    @media (min-width: 768px) {
        .story-layout-v2 {
            grid-template-columns: 1.5fr 1fr; /* Más espacio al texto */
            gap: 4rem;
        }
    }
    .story-text h2 { /* Si hubiera un H2 dentro de .story-text */
        margin-top: 0;
        text-align: left;
        margin-bottom: 1.5rem;
    }
    .story-text p {
        color: #444; /* Ajusta si usas fondo oscuro */
        line-height: 1.8;
        margin-bottom: 1.5rem;
        font-size: 1.05rem;
    }
    .story-text strong { font-weight: 600; color: #333; } /* Ajusta si usas fondo oscuro */
    .impact-quote {
        border-left: 4px solid var(--primary-color);
        margin: 2rem 0 2rem 1rem;
        padding: 0.5rem 0 0.5rem 1.5rem;
        font-style: italic;
        font-size: 1.1rem;
        color: #555; /* Ajusta si usas fondo oscuro */
    }
    .impact-quote cite {
        display: block;
        margin-top: 0.5rem;
        font-style: normal;
        font-size: 0.9rem;
        color: #888;
    }
    .story-image { /* Contenedor */ }
    .story-img-element { /* Estilo para la imagen de bridge */
        display: block;
        width: 100%;
        height: auto;
        border-radius: 12px;
        box-shadow: 0 8px 25px rgba(0,0,0,0.1);
    }
    .mission-link { margin-top: 1.5rem; } /* Estilo para el párrafo con el link a la misión */
    .mission-link strong { display: block; margin-bottom: 0.25rem; }
    .mission-link a { color: var(--primary-color); text-decoration: none; font-weight: 500; }
    .mission-link a:hover { text-decoration: underline; }


    /* ====================================================================== */
    /* --- ESTILOS SECCIÓN FOUNDATION (LAYOUT B) --- */
    /* ====================================================================== */
    .foundation-section {
        border-top: 1px solid rgba(0, 0, 0, 0.05); /* Separador muy sutil */
        border-bottom: 1px solid rgba(0, 0, 0, 0.05);
        overflow: hidden; /* Evita desbordes inesperados */
    }
     /* Título H2 ya cubierto por .section-title-alt global */

    .foundation-grid-layout-B {
        display: grid;
        grid-template-columns: 1fr; /* 1 columna por defecto en móvil */
        gap: 2.5rem; /* Espacio entre stack y valores en móvil */
    }

    .mission-vision-stack {
        display: flex;
        flex-direction: column;
        gap: 2.5rem; /* Espacio entre Misión y Visión */
    }

    @media (min-width: 992px) { /* Punto de quiebre para layout asimétrico */
        .foundation-grid-layout-B {
            /* Layout Asimétrico: Columna M/V (1fr), Valores (1.5fr) */
            grid-template-columns: 1fr 1.5fr;
            /* O al revés: grid-template-columns: 1.5fr 1fr; */
            gap: 3rem; /* Espacio entre columnas */
            align-items: stretch; /* Que las columnas intenten tener la misma altura */
        }
        /* Si eliges Valores a la izquierda, descomenta y ajusta: */
        /* .values-item-dominant { grid-column: 1 / 2; } */
        /* .mission-vision-stack { grid-column: 2 / 3; } */
    }

    /* Estilos Comunes para las tarjetas de Foundation */
    .foundation-item {
        background-color: rgba(255, 255, 255, 0.9); /* Fondo blanco semi-opaco */
        backdrop-filter: blur(10px); /* Efecto cristal */
        border: 1px solid rgba(0, 0, 0, 0.07);
        border-radius: 16px; /* Bordes redondeados */
        padding: 2.5rem;
        box-shadow: 0 12px 35px rgba(0, 60, 120, 0.08); /* Sombra suave azulada */
        display: flex;
        flex-direction: column;
        align-items: center; /* Centra icono y título */
        text-align: center; /* Centra texto por defecto */
        transition: transform 0.3s ease-out, box-shadow 0.3s ease-out;
        height: 100%; /* Importante para align-items: stretch en el grid */
    }

    .card-hover-effect:hover {
        transform: translateY(-8px); /* Efecto levantar */
        box-shadow: 0 18px 45px rgba(0, 70, 140, 0.12); /* Sombra más pronunciada */
    }

    .foundation-icon {
        color: #fff; /* Icono SVG/Font blanco */
        margin-bottom: 1.5rem;
        background: linear-gradient(145deg, var(--primary-color), #0056b3); /* Ajusta 2º color */
        border-radius: 50%;
        width: 70px;
        height: 70px;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 4px 12px rgba(0, 123, 255, 0.35);
        flex-shrink: 0;
    }
     /* El tamaño del icono interno se controla con 'size' en <Icon> */

    h3.foundation-title { /* Estilo específico para títulos dentro de Foundation */
        font-size: 1.6rem;
        margin-top: 0;
        margin-bottom: 1rem;
        color: var(--text-dark);
        font-weight: 700;
        line-height: 1.3;
    }

    .foundation-text { /* Párrafos de Misión y Visión */
        color: var(--text-medium);
        line-height: 1.7;
        font-size: 1rem;
        margin-bottom: 0;
        flex-grow: 1; /* Ayuda a ocupar espacio vertical */
    }

    /* --- Estilos Específicos Tarjeta Valores Dominante --- */
    .values-item-dominant {
        padding: 3rem; /* Más padding si es necesario */
        align-items: stretch; /* Contenido interno ocupa espacio */
        text-align: left; /* Texto de valores a la izquierda */
    }
    .values-item-dominant .foundation-icon {
         align-self: center; /* Centra el icono principal */
    }
    .values-item-dominant .foundation-title {
         text-align: center; /* Centra el título "Our Core Values" */
    }

    /* Sub-grid para los valores individuales */
    .values-subgrid {
        margin-top: 2.5rem;
        display: grid;
        gap: 2rem; /* Espacio vertical entre valores */
    }
    /* Opcional: 2 columnas para valores en pantallas muy anchas */
    /* @media (min-width: 1200px) {
        .values-item-dominant .values-subgrid {
             grid-template-columns: repeat(2, 1fr);
             gap: 1.5rem 2.5rem;
        }
    } */

    .value-subitem {
        display: flex;
        align-items: flex-start; /* Icono alineado arriba del texto */
        gap: 1.2rem; /* Espacio icono-texto */
        padding-top: 1.5rem;
        border-top: 1px solid var(--border-color-soft); /* Separador suave */
    }
    .value-subitem:first-child { border-top: none; padding-top: 0; }

    .value-subicon {
        color: var(--primary-color);
        flex-shrink: 0;
        margin-top: 0.1em; /* Ajuste vertical fino */
        /* width: 28px; height: 28px; */ /* Ajusta si es necesario */
    }

    .value-subtext { flex-grow: 1; }
    .value-subtext strong {
        display: block;
        font-size: 1.1rem;
        font-weight: 600;
        color: var(--text-dark);
        margin-bottom: 0.35rem;
    }
    .value-subtext p {
        font-size: 0.95rem;
        color: var(--text-light);
        line-height: 1.6;
        margin-bottom: 0;
    }

    /* ====================================================================== */
    /* --- ESTILOS SECCIÓN OUR TEAM --- */
    /* ====================================================================== */
    .our-team-v2 { background-color: var(--bg-light-gray); } /* Fondo claro */
    .our-team-v2 .section-title-alt { text-align: left; margin-bottom: 1.5rem;} /* Título alineado izquierda en esta sección */

    .team-layout {
        display: grid;
        grid-template-columns: 1fr;
        gap: 3rem;
        align-items: center;
    }
    @media (min-width: 768px) {
        .team-layout {
             grid-template-columns: 1fr 1.5fr; /* Imagen (1fr), Texto (1.5fr) */
             gap: 4rem;
        }
    }
    .team-text h2 { margin-top: 0; text-align: left; } /* Asegura alineación izquierda */
    .team-text p {
        color: #444; /* Ajusta si cambias fondo */
        line-height: 1.8;
        margin-bottom: 1.5rem;
        font-size: 1.05rem;
    }
    .team-text strong { font-weight: 700; color: #333; } /* Ajusta si cambias fondo */
    .team-image { order: -1; } /* Imagen arriba en móvil */
    @media (min-width: 768px) { .team-image { order: 0; } } /* Imagen a la izquierda en desktop */

    .team-img-element { /* Estilo para la imagen de experts */
        display: block;
        width: 100%;
        height: auto;
        border-radius: 12px;
        box-shadow: 0 8px 25px rgba(0,0,0,0.1);
    }


    /* ====================================================================== */
    /* --- ESTILOS SECCIÓN FINAL CTA --- */
    /* ====================================================================== */
    .final-cta-about { /* Hereda fondo de :global(.bg-gradient) */
        text-align: center;
    }
    .final-cta-about h2 {
        color: #333; /* Ajusta si usas fondo oscuro */
        font-size: clamp(1.6rem, 4vw, 2.2rem);
        margin-bottom: 0.75rem;
    }
    .final-cta-about p {
        margin-bottom: 2.5rem;
        font-size: 1.1rem;
        color:#555; /* Ajusta si usas fondo oscuro */
    }
    .cta-buttons {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 1.2rem;
    }
    /* Estilos de botones (asume que pueden existir globalmente, pero los define aquí por si acaso) */
    .cta-button-primary, .cta-button-secondary {
        padding: 0.9rem 2rem;
        border-radius: 6px;
        text-decoration: none;
        font-weight: bold;
        font-size: 1rem;
        transition: all 0.2s ease;
        border: 2px solid transparent;
        cursor: pointer; /* Añadido para mejor UX */
        display: inline-block; /* Asegura correcto padding y margen */
    }
    .cta-button-primary {
        background-color: var(--primary-color);
        color: white;
    }
    .cta-button-primary:hover {
        background-color: transparent;
        color: var(--primary-color);
        border-color: var(--primary-color);
    }
    .cta-button-secondary {
        background-color: #e9ecef; /* Gris claro */
        color: #495057; /* Texto gris oscuro */
    }
    .cta-button-secondary:hover {
        background-color: #ced4da; /* Gris un poco más oscuro */
        color: #343a40;
    }

</style>