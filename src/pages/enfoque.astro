        <!-- Integración de Ecosistemas -->
        <div
          class="bg-white p-8 rounded-xl shadow-sm border border-gray-100 hover:shadow-md transition-shadow"
        >
          <div
            class="w-16 h-16 bg-primary/10 rounded-full flex items-center justify-center mb-6"
          >
            <div
              class="w-8 h-8 flex items-center justify-center text-primary"
            >
              <i class="ri-link-m-line ri-2x"></i>
            </div>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-3">
            Integración de Ecosistemas
          </h3>
          <p class="text-gray-600 mb-4">
            Conectamos fluidamente sus herramientas mediante APIs y soluciones
            sin código, integrando CRMs, plataformas de comunicación,
            calendarios y más.
          </p>
          <ul class="space-y-2">
            <li class="flex items-start">
              <div
                class="w-5 h-5 flex items-center justify-center text-primary mt-0.5"
              >
                <i class="ri-check-line"></i>
              </div>
              <span class="ml-2 text-gray-600">Integración de CRMs</span>
            </li>
            <li class="flex items-start">
              <div
                class="w-5 h-5 flex items-center justify-center text-primary mt-0.5"
              >
                <i class="ri-check-line"></i>
              </div>
              <span class="ml-2 text-gray-600"
                >Conexión de plataformas de comunicación</span
              >
            </li>
            <li class="flex items-start">
              <div
                class="w-5 h-5 flex items-center justify-center text-primary mt-0.5"
              >
                <i class="ri-check-line"></i>
              </div>
              <span class="ml-2 text-gray-600">Soluciones sin código</span>
            </li>
          </ul>
        </div>

        <!-- Estrategia Experta -->
        <div
          class="bg-white p-8 rounded-xl shadow-sm border border-gray-100 hover:shadow-md transition-shadow"
        >
          <div
            class="w-16 h-16 bg-primary/10 rounded-full flex items-center justify-center mb-6"
          >
            <div
              class="w-8 h-8 flex items-center justify-center text-primary"
            >
              <i class="ri-lightbulb-line ri-2x"></i>
            </div>
          </div>
