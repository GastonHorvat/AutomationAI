        <!-- Herramientas Web con IA -->
        <div
          class="bg-white p-8 rounded-xl shadow-sm border border-gray-100 hover:shadow-md transition-shadow"
        >
          <div
            class="w-16 h-16 bg-primary/10 rounded-full flex items-center justify-center mb-6"
