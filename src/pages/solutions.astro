---
// src/pages/solutions.astro
import Layout from '../layouts/Layout.astro'; // Ajusta ruta si es necesario
import { Image } from 'astro:assets';

// --- 1. Importar Imágenes ---
// Asegúrate que las rutas sean correctas desde ESTE archivo
import automationImg from '../assets/images/intelligent.png'; // Ejemplo, ajusta si la ruta es ../../src/assets...
import analyticsImg from '../assets/images/analytics-neon.png';
import customerImg from '../assets/images/ai-powered.png';
import customDevImg from '../assets/images/custom-ai.png';
import consultingImg from '../assets/images/ai-audit.png';

// --- 2. Datos de las Secciones (¡COMPLETA LOS detailsList!) ---
const solutions = [
  {
    id: "automation",
    image: automationImg,
    imageAlt: "Intelligent process automation concept",
    title: "Intelligent Process Automation & Optimization",
    intro: "Streamline your operations by automating repetitive, time-consuming tasks and optimizing workflows. We identify bottlenecks and implement AI to reduce manual workload, minimize errors, and significantly boost productivity.",
    detailsTitle: "Examples of What You Can Automate/Optimize:",
    detailsList: [ // !!! RELLENA ESTO !!!
      "Appointment Management: Auto-organize schedules & send reminders.",
      "Billing & Invoicing: Generate and dispatch invoices automatically.",
      "Expense Tracking: Digitize receipts & categorize expenses.",
      "Inventory Management: Track stock & receive reorder alerts.",
      "Customer Support: Answer FAQs 24/7 with chatbots/voice agents.",
      "Email Communications: Automate personalized emails.",
      "Resource Allocation: Efficiently distribute materials & personnel.",
      "Predictive Maintenance: Detect equipment issues early."
    ],
    benefits: "Save Time, Reduce Errors, Increase Efficiency, Enhance CX, Lower Costs."
  },
  {
    id: "analytics",
    image: analyticsImg,
    imageAlt: "Data analytics insights visualization",
    title: "Data Analytics & Insights",
    intro: "Transform raw data into actionable knowledge. Our AI-powered analysis helps you understand customer behavior, predict market trends, evaluate performance, and make informed decisions based on precise, relevant information.",
    detailsTitle: "Leverage Your Data For:",
    detailsList: [ // !!! RELLENA ESTO !!!
      "Customer Analysis: Identify behavior patterns & segment audiences.",
      "Sales Forecasting: Estimate future demand for planning.",
      "Performance Analysis: Evaluate efficiency in real-time.",
      "Data Visualization: Present complex info clearly.",
      "Competitive Analysis: Benchmark against competitors."
    ],
    benefits: "Clearer Vision, Identify Opportunities, Informed Decisions, Competitive Edge."
  },
  {
    id: "customer-experience",
    image: customerImg,
    imageAlt: "AI enhancing customer experience",
    title: "AI-Powered Customer Experience",
    intro: "Elevate customer satisfaction and build loyalty. We implement AI tools to provide personalized interactions, proactive communication, and instant, intelligent support across all touchpoints.",
    detailsTitle: "Enhance Interactions With:",
    detailsList: [ // !!! RELLENA ESTO !!!
       "Intelligent Chatbots & Voice Agents: Provide 24/7 support.",
       "Personalization Engines: Recommend relevant products/content.",
       "Sentiment Analysis: Understand customer feedback at scale.",
       "Automated Reminders & Notifications: Keep customers informed."
    ],
    benefits: "Increased Satisfaction, Higher Engagement, Improved Loyalty, Efficient Support."
  },
  {
    id: "custom-development",
    image: customDevImg,
    imageAlt: "Custom AI solution development",
    title: "Custom AI Development",
    intro: "Have a unique challenge? Our team specializes in developing bespoke AI applications tailored precisely to your specific needs, integrating seamlessly with your existing systems.",
    detailsTitle: "Our Custom Services Include:",
    detailsList: [ // !!! RELLENA ESTO !!!
       "Bespoke Model Training: Develop models trained on your data.",
       "Custom Application Building: Create complete AI tools.",
       "API Integrations: Connect AI with your current software.",
       "Proof-of-Concepts (PoCs): Validate AI ideas quickly."
    ],
    benefits: "Solve Unique Problems, Competitive Edge, Seamless Integration, Scalable Solutions."
  },
   {
    id: "consulting",
    image: consultingImg,
    imageAlt: "AI audit and consulting process",
    title: "AI Audit & Consulting",
    intro: "Not sure where to start? Our AI audit service analyzes your current processes to identify key areas for improvement and recommend the most suitable AI solutions.",
    detailsTitle: "Our Audit Process:",
    detailsList: [ // !!! RELLENA ESTO !!!
      "Initial Analysis: We study your current business processes.",
      "Inefficiency Detection: We identify bottlenecks & repetitive tasks.",
      "Custom Proposal: We design a plan with appropriate AI solutions.",
      "Implementation Guidance: We assist with tool integration.",
      "Monitoring & Adjustment: We evaluate results & fine-tune."
    ],
    isOrderedList: true,
    benefits: "Clear Roadmap, Identify High-Impact Opportunities, Maximize ROI, Strategic Guidance."
  }
];
---

<Layout title="AI Solutions for Business Transformation">
  <div class="container"> {/* Contenedor general */}
    {/* --- Introducción General --- */}
    <section class="intro-section section-padding text-center">
      <h1>Our AI Solutions</h1>
      <p class="page-subtitle">
        At AutomationAI Solutions, we offer artificial intelligence solutions designed
        to transform and optimize businesses of all sizes...
      </p>
    </section>

    {/* --- Renderizado de Secciones --- */}
    <div class="solutions-wrapper">
      {solutions.map((solution) => (
        <section
          id={solution.id}
          class:list={[ "solution-item", "section-padding" ]}
        >
          {/* Layout de 2 columnas DENTRO del container */}
          <div class="solution-layout container">

            {/* Columna Izquierda: Tarjeta con Imagen de Fondo y Texto Arriba */}
            <div class="solution-card-left">
               <div class="card-bg-image-container">
                    <Image
                        src={solution.image} alt="" loading="lazy" decoding="async"
                        class="card-bg-image" format="webp" quality={75} aria-hidden="true"
                        widths={[400, 800]} sizes="(max-width: 767px) 90vw, (min-width: 768px) 45vw"
                    />
                    <div class="card-bg-overlay"></div>
               </div>
               <div class="card-text-overlay">
                   <h2 class="solution-title">{solution.title}</h2>
                   <p class="solution-intro-paragraph">{solution.intro}</p>
               </div>
            </div>

            {/* Columna Derecha: Detalles y Beneficios */}
            <div class="solution-details-column">
              <h3>{solution.detailsTitle}</h3>
              {solution.isOrderedList ? (
                <ol class="details-list">
                  {/* Renderiza items de lista ordenada */}
                  {solution.detailsList.map(item => <li>{item}</li>)}
                </ol>
              ) : (
                <ul class="details-list icon-list">
                  {/* Renderiza items de lista CON BULLET */}
                  {solution.detailsList.map(item => <li><span class="list-bullet">•</span> {item}</li>)}
                </ul>
              )}
              <div class="benefits-block">
                <strong>Key Benefits:</strong> {solution.benefits}
              </div>
            </div> {/* Fin .solution-details-column */}

          </div> {/* Fin .solution-layout */}
        </section>
      ))}
    </div> {/* Fin .solutions-wrapper */}
  </div> {/* Fin de .container principal */}
</Layout>

<style>
  /* --- Estilos Generales --- */
  .intro-section { margin-bottom: 1rem; }
  .page-subtitle { font-size: 1.15rem; color: #555; max-width: 800px; margin: 1rem auto 0 auto; }
  .text-center { text-align: center; }
  /* .section-padding y .container deben estar en global.css */
  /* :global(.section-padding) { padding-top: 4rem; padding-bottom: 4rem; } */
  /* :global(.container) { ... } */
  /* :global(.bg-white) { ... } */
  /* :global(.bg-light-gray) { ... } */

  /* --- Estilos por Sección --- */
  .solution-item {
      /* Padding vertical viene de .section-padding global */
  }

  /* Layout de 2 columnas */
  .solution-layout {
    display: grid;
    grid-template-columns: 1fr; /* 1 columna por defecto */
    gap: 2rem 3rem;
    /* Hereda max-width, margin: auto, padding lateral de .container */
  }
  @media (min-width: 768px) {
    .solution-layout {
      grid-template-columns: repeat(2, 1fr); /* 2 columnas */
      align-items: stretch; /* Intenta igualar alturas */
    }
  }

  /* --- Columna Izquierda: Tarjeta --- */
  .solution-card-left {
  position: relative;
  border-radius: 12px;
  overflow: hidden;
  min-height: 400px;
  display: flex; /* Mantenemos flex por si acaso, pero la dirección es clave */
  flex-direction: column; /* Asegura que el texto fluya verticalmente */
  /* justify-content: flex-start; */ /* Alinea arriba (por defecto con flex-direction: column) */
  /* align-items: stretch; */ /* Estira el item hijo (el text-overlay) */
  box-shadow: 0 6px 15px rgba(0,0,0,0.1);
  background-color: #1a1a1a;
}

  .card-bg-image-container {
    position: absolute; top: 0; left: 0; width: 100%; height: 100%; z-index: 0;
  }
  .card-bg-image { display: block; width: 100%; height: 100%; object-fit: cover; }
  .card-bg-overlay {
    position: absolute; top: 0; left: 0; width: 100%; height: 100%;
    /* Gradiente oscuro arriba para legibilidad del texto */
    background: linear-gradient(to bottom, rgba(20, 20, 30, 0.85) 0%, rgba(20, 20, 30, 0.4) 60%, rgba(20, 20, 30, 0.1) 100%);
    /* O color sólido: background-color: rgba(20, 20, 30, 0.7); */
    z-index: 1;
  }

  /* Contenido de Texto Superpuesto (Arriba) */
  .card-text-overlay {
    position: relative; /* Mantiene encima del fondo */
    z-index: 2;
    padding: 1.5rem 2rem; /* Padding interno */
    color: #fff;
  }
  .card-text-overlay .solution-title {
    font-size: 1.6rem; margin-top: 0; margin-bottom: 0.5rem; color: #fff;
    font-weight: 700; line-height: 1.3;
  }
  .card-text-overlay .solution-intro-paragraph {
    color: #e0e0e0; line-height: 1.6; font-size: 0.95rem; margin-bottom: 0; opacity: 0.9;
  }

  /* --- Columna Derecha (Detalles) --- */
  .solution-details-column {
      padding-top: 0.25rem; /* Alineación fina */
      /* Hereda fondo claro/blanco de la <section> */
      color: #444; /* Texto oscuro por defecto */
  }
  .solution-details-column h3 {
    margin-top: 0; margin-bottom: 1rem; font-size: 1.2rem; font-weight: 600; color: #333;
  }
  .details-list { padding-left: 0.5rem; list-style: none; margin-bottom: 1.5rem; }
  .details-list li { margin-bottom: 0.8rem; color: #444; line-height: 1.6; padding-left: 1.5rem; position:relative; }
  /* Estilo Bullet (Restaurado) */
  .details-list .list-bullet { position:absolute; left:0; top: 0.1em; color: var(--primary-color); font-weight: bold; }
  /* Lista ordenada */
  ol.details-list { list-style: decimal inside; padding-left: 0.5rem; }
  ol.details-list li { padding-left: 0.5rem; }

  /* Bloque de Beneficios */
  .benefits-block {
      background-color: #f0f5fa; border-left: 4px solid var(--primary-color);
      padding: 1rem 1.5rem; margin-top: 2rem; font-size: 0.95rem; color: #444; border-radius: 4px;
  }
   .benefits-block strong { color: #222; font-weight: 600; }

</style>