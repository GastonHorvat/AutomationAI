    max-height: 80vh; 
    display: flex;
    flex-direction: column;
    position: absolute; 
    bottom: 95px; /* Ajustado ligeramente por si el bot칩n es de 72px + ~20px de espacio */
    right: 0;
    overflow: hidden; 
    transition: opacity 0.3s ease, transform 0.3s ease;
  }

  #chatbot-window.hidden {
