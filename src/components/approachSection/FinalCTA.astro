---
// Componente de Sección CTA Final - Invita a usuarios a contactar con la empresa
import { Icon } from 'astro-icon/components';
---

<section class="final-cta-section section-padding bg-gradient">
    <div class="container text-center narrow-container">
      <!-- Título con texto destacado -->
      <h2>Let's Build Your <span class="highlight">AI Advantage</span>, Together.</h2>
      
      <p>Ready to see how our tailored approach can transform your specific business challenges into growth opportunities?</p>
      
      <div class="cta-buttons">
        <!-- Botón primario para la acción principal -->
        <a href="/contact" class="cta-button-primary">CONTACT US FOR A CONSULTATION</a>
        
        <!-- Botón secundario como alternativa -->
        <a href="/solutions" class="cta-button-secondary">EXPLORE OUR SOLUTIONS</a>
      </div>
    </div>
</section>

<style>
/* Estilos para el título y texto */
.final-cta-section h2 { 
  color: var(--text-dark); 
  font-size: clamp(1.8rem, 5vw, 2.5rem); 
  margin-bottom: 1rem; 
}

.final-cta-section p { 
  margin-bottom: 2.5rem; 
  font-size: 1.15rem; 
  color: var(--text-medium); 
}

/* Contenedor flex para los botones que se adapta a móvil */
.cta-buttons { 
  display: flex; 
  flex-wrap: wrap; 
  justify-content: center; 
  gap: 1.2rem; 
}

/* Estilos base compartidos por ambos botones */
.cta-button-primary, .cta-button-secondary { 
  padding: 0.9rem 2.2rem; 
  border-radius: 8px; 
  text-decoration: none; 
  font-weight: 600; 
  font-size: 1rem; 
  transition: all 0.2s ease; 
  border: 2px solid transparent; 
  cursor: pointer; 
  display: inline-block; 
  text-transform: uppercase; 
  letter-spacing: 0.5px; 
}

/* Botón primario: destacado con color principal */
.cta-button-primary { 
  background-color: var(--primary-color); 
  color: var(--white); 
  border-color: var(--primary-color); 
}

.cta-button-primary:hover { 
  background-color: transparent; 
  color: var(--primary-color); 
  border-color: var(--primary-color); 
}

/* Botón secundario: menos destacado */
.cta-button-secondary { 
  background-color: #e9ecef; 
  color: var(--text-dark); 
  border-color: #e9ecef; 
}

.cta-button-secondary:hover { 
  background-color: #ced4da; 
  color: var(--text-dark); 
  border-color: #ced4da; 
}
</style>