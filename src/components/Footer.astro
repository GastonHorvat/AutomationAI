---
// src/components/Footer.astro
const currentYear = new Date().getFullYear();
const companyName = "AutomationAI Solutions";
const logoSrc = "/img/AutomationAI_logo_white.png"; // Tu logo blanco
const logoAlt = `${companyName} Logo`;

// Enlaces de redes sociales (Reemplaza '#' con tus URLs reales)
const socialLinks = {
  linkedin: "#",
  twitter: "#",
  facebook: "#",
  instagram: "#",
};

// Datos de contacto (del ejemplo, ajústalos)
const contactInfo = {
  address: "Av. Diagonal 123, 08018 Barcelona, España",
  email: "info@automationai.es",
  phone: "+34 93 123 45 67",
};
---

{/* --- ASEGÚRATE DE TENER ESTO EN TU <head> DEL LAYOUT ---
<link href="https://cdn.jsdelivr.net/npm/remixicon@4.2.0/fonts/remixicon.css" rel="stylesheet" />
---------------------------------------------------------- */}

<footer class="site-footer">
  <div class="container">
    <div class="footer-grid">
      {/* Columna 1: Logo */}
      <div class="footer-column">
        {/* ... Contenido Logo ... */}
         <a href="/" class="footer-logo-link">
          <img src={logoSrc} alt={logoAlt} class="footer-logo" />
        </a>
        <p class="footer-description">
          Driving business transformation through intelligent automation.
        </p>
        <div class="social-icons">
          {socialLinks.linkedin && <a href={socialLinks.linkedin} target="_blank" rel="noopener noreferrer" aria-label="LinkedIn" class="social-icon-link"><div class="social-icon-circle"><i class="ri-linkedin-fill"></i></div></a>}
          {socialLinks.twitter && <a href={socialLinks.twitter} target="_blank" rel="noopener noreferrer" aria-label="Twitter X" class="social-icon-link"><div class="social-icon-circle"><i class="ri-twitter-x-fill"></i></div></a>}
          {socialLinks.facebook && <a href={socialLinks.facebook} target="_blank" rel="noopener noreferrer" aria-label="Facebook" class="social-icon-link"><div class="social-icon-circle"><i class="ri-facebook-fill"></i></div></a>}
          {socialLinks.instagram && <a href={socialLinks.instagram} target="_blank" rel="noopener noreferrer" aria-label="Instagram" class="social-icon-link"><div class="social-icon-circle"><i class="ri-instagram-fill"></i></div></a>}
        </div>
      </div>

      {/* Columna 2: Espaciador Vacío */}
      <div class="footer-column footer-spacer" aria-hidden="true"></div>

      {/* Columna 3: Navegación */}
      <div class="footer-column">
        {/* ... Contenido Navegación ... */}
         <h4 class="footer-heading">Navigation</h4>
        <ul class="footer-links">
          <li><a href="/">Home</a></li>
          <li><a href="/solutions">Solutions</a></li>
          <li><a href="/approach">Approach</a></li>
          <li><a href="/about">About</a></li>
          <li><a href="/contact">Contact</a></li>
        </ul>
      </div>

      {/* Columna 4: Recursos */}
      <div class="footer-column">
        {/* ... Contenido Recursos ... */}
         <h4 class="footer-heading">Resources</h4>
        <ul class="footer-links">
          <li><a href="/blog">Blog</a></li>
          <li><a href="/tools">AI Tools</a></li>
          <li><a href={socialLinks.linkedin} target="_blank" rel="noopener noreferrer">LinkedIn Profile</a></li>
          <li><a href={socialLinks.twitter} target="_blank" rel="noopener noreferrer">Twitter Profile</a></li>
        </ul>
      </div>

      {/* Columna 5: Contacto */}
      <div class="footer-column">
        {/* ... Contenido Contacto ... */}
         <h4 class="footer-heading">Contact</h4>
        <ul class="contact-info">
          <li class="contact-item"><i class="ri-map-pin-line contact-icon"></i><span>{contactInfo.address}</span></li>
          <li class="contact-item"><i class="ri-mail-line contact-icon"></i><a href={`mailto:${contactInfo.email}`} class="contact-link">{contactInfo.email}</a></li>
          <li class="contact-item"><i class="ri-phone-line contact-icon"></i><a href={`tel:${contactInfo.phone.replace(/\s/g, '')}`} class="contact-link">{contactInfo.phone}</a></li>
        </ul>
      </div>
    </div>

    {/* Barra Inferior */}
    <div class="footer-bottom">
       {/* ... Contenido Barra Inferior ... */}
       <p class="copyright">© {currentYear} {companyName}. All rights reserved.</p>
      <div class="legal-links">
        <a href="/privacy-policy">Privacy Policy</a>
        <a href="/terms-of-service">Terms of Service</a>
        <a href="/cookies-policy">Cookies</a>
      </div>
    </div>
  </div>
</footer>

<style>
  /* Estilos Generales del Footer */
  .site-footer {
    background-color: #111827; /* bg-gray-900 */
    color: #d1d5db; /* Gris claro por defecto */
    padding-top: 4rem; /* pt-16 */
    padding-bottom: 2rem; /* pb-8 */
    font-size: 0.875rem;
    line-height: 1.6;
  }

  /* Asume que .container tiene max-width, margin:auto y padding globalmente */
  .container {
    /* Si necesitas padding extra específico aquí (además del global), añádelo */
    /* padding-left: 1rem; */
    /* padding-right: 1rem; */
  }

  /* Grid Principal */
  .footer-grid {
    display: grid;
    grid-template-columns: repeat(1, minmax(0, 1fr));
    gap: 2rem; /* gap-8 */
    margin-bottom: 3rem; /* mb-12 */
  }
  @media (min-width: 768px) {
    .footer-grid {
      /* 4 columnas para los 4 bloques de contenido visibles */
      grid-template-columns: 1.5fr 1fr 1fr 1fr; /* Logo un poco más ancho, resto igual */
    }
     /* Ocultamos el espaciador explícitamente */
     .footer-spacer { display: none; }
  }

  /* Desktop: 5 columnas (restaurando el espaciador) */
  @media (min-width: 1024px) {
    .footer-grid {
      /* Col1=Ancha, Col2=Estrecha(Spacer), Col3,4,5=Normales */
      grid-template-columns: 1.5fr 0.5fr 1fr 1fr 1fr;
    }
     /* Mostramos el espaciador de nuevo */
     .footer-spacer { display: block; }
  }

   /* Estilos para la columna espaciadora (cuando es visible) */
   .footer-spacer {
     /* No necesita contenido */
   }


  /* Columna 1: Logo, Descripción, Redes */
  .footer-logo-link { display: inline-block; margin-bottom: 1rem; }
  .footer-logo { height: 35px; width: auto; display: block; }
  .footer-description { color: #9ca3af; margin-bottom: 1.5rem; }
  .social-icons { display: flex; gap: 1rem; }
  .social-icon-link { color: #9ca3af; transition: color 0.2s ease-in-out; display: inline-block; /* Necesario para que el círculo funcione bien */ }
  .social-icon-link:hover { color: #ffffff; }
  .social-icon-circle {
    width: 2.5rem; height: 2.5rem; display: flex; align-items: center;
    justify-content: center; border: 1px solid #374151; border-radius: 9999px;
    transition: border-color 0.2s ease-in-out, color 0.2s ease-in-out;
  }
  .social-icon-link:hover .social-icon-circle { border-color: #9ca3af; }
  .social-icon-circle i { font-size: 1.25rem; line-height: 1; /* Asegura que el icono no tenga altura extra */ }

  /* Columnas 2, 3, 4: Títulos y Listas */
  .footer-heading { color: #ffffff; font-size: 1.125rem; font-weight: 600; margin-bottom: 1rem; }
  .footer-links { list-style: none; padding: 0; margin: 0; display: flex; flex-direction: column; gap: 0.75rem; }
  .footer-links li a { color: #9ca3af; text-decoration: none; transition: color 0.2s ease-in-out; }
  .footer-links li a:hover { color: #ffffff; text-decoration: underline; }

  /* Columna 4: Contacto Específico (Ajustes de alineación) */
  .contact-info { list-style: none; padding: 0; margin: 0; display: flex; flex-direction: column; gap: 1rem; color: #9ca3af; }
  .contact-item { display: flex; align-items: flex-start; /* Mantenemos flex-start por si hay texto multi-línea */ }
  .contact-icon {
    width: 1.25rem; /* w-5 */
    margin-right: 0.5rem; /* ml-2 en el span, aplicado como mr al icono */
    flex-shrink: 0;
    /* Quitado: margin-top: 0.125rem; para mejorar alineación inicial */
    line-height: inherit; /* Intenta alinear mejor el icono con la primera línea de texto */
    margin-top: 0.1em; /* Alternativa: un pequeño margen relativo para centrar verticalmente */
    text-align: center; /* Asegura que el icono esté centrado en su espacio */
  }
  .contact-link { color: #9ca3af; text-decoration: none; transition: color 0.2s ease-in-out; }
  .contact-link:hover { color: #ffffff; text-decoration: underline; }

  /* Barra Inferior */
  .footer-bottom {
    border-top: 1px solid #1f2937;
    padding-top: 2rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    margin-top: 3rem;
  }
  .copyright { color: #9ca3af; font-size: 0.875rem; margin-bottom: 1rem; }
  .legal-links { display: flex; flex-wrap: wrap; justify-content: center; gap: 1rem 1.5rem; }
  .legal-links a { color: #9ca3af; font-size: 0.875rem; text-decoration: none; transition: color 0.2s ease-in-out; }
  .legal-links a:hover { color: #ffffff; text-decoration: underline; }

  @media (min-width: 768px) {
    .footer-bottom { flex-direction: row; justify-content: space-between; align-items: center; text-align: left; }
    .copyright { margin-bottom: 0; }
    .legal-links { justify-content: flex-end; gap: 1.5rem; }
  }

</style>